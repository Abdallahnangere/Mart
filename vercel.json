{
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/", "destination": "/public/index.html" },
    { "source": "/(.*\\.html)", "destination": "/public/$1" },
    { "source": "/js/(.*)", "destination": "/public/js/$1" },
    { "source": "/(.*)", "destination": "/public/$1" }
  ],
  "functions": {
    "api/*.js": {
      "maxDuration": 10
    }
  }
}
