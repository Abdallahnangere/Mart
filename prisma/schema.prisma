generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums for strict status control
enum TransactionStatus {
  PENDING
  SUCCESS
  FAILED
  REVERSED
}

enum TransactionType {
  WALLET_FUNDING
  DATA_PURCHASE
  PRODUCT_PURCHASE
  COMMISSION
}

enum NetworkProvider {
  MTN
  GLO
  AIRTEL
  NMOBILE // 9Mobile
}

model Product {
  id          String   @id @default(uuid())
  name        String
  description String?
  priceInKobo Int      @default(0) // Stored in Kobo (e.g., 10000 = N100.00)
  stock       Int      @default(0)
  imageUrl    String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  transactions Transaction[]
}

model DataPlan {
  id           String          @id @default(uuid())
  network      NetworkProvider
  planName     String
  apiPlanId    String          // External ID mapping for Amigo.ng
  priceInKobo  Int             @default(0)
  sellingPrice Int             @default(0) // Price shown to user
  isActive     Boolean         @default(true)
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt

  transactions Transaction[]
}

model Agent {
  id               String   @id @default(uuid())
  email            String   @unique
  passwordHash     String
  fullName         String
  phoneNumber      String?
  
  // Financials
  walletBalance    Int      @default(0) // Stored in Kobo
  virtualAccNumber String?  @unique
  virtualBankName  String?
  referralCode     String   @unique

  isActive         Boolean  @default(true)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  transactions     Transaction[]
}

model Transaction {
  id              String            @id @default(uuid())
  reference       String            @unique // Internal unique ref
  externalRef     String?           // Payment gateway ref (Flutterwave/Amigo)
  
  amountInKobo    Int
  feeInKobo       Int               @default(0)
  totalInKobo     Int               // amount + fee
  
  status          TransactionStatus @default(PENDING)
  type            TransactionType
  
  description     String?
  metadata        Json?             // Stores snapshot of item bought
  
  // Relations
  agentId         String
  agent           Agent             @relation(fields: [agentId], references: [id])
  
  productId       String?
  product         Product?          @relation(fields: [productId], references: [id])
  
  dataPlanId      String?
  dataPlan        DataPlan?         @relation(fields: [dataPlanId], references: [id])

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  completedAt     DateTime?

  @@index([agentId])
  @@index([status])
  @@index([reference])
}
