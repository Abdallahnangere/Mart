generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  price       Float
  image       String
  description String
  inStock     Boolean  @default(true)
}

model DataPlan {
  id        String @id @default(uuid())
  network   String
  networkId Int
  planId    Int
  name      String
  price     Float
}

model Agent {
  id        String   @id @default(uuid())
  name      String
  phone     String   @unique
  email     String?
  pin       String
  balance   Float    @default(0.0)
  status    String   @default("PENDING")
  
  // Static Funding Account
  virtualAccountBank    String?
  virtualAccountNumber  String?
  virtualAccountName    String?
  
  createdAt DateTime @default(now())
}

model Transaction {
  id            String   @id @default(uuid())
  reference     String   @unique
  type          String   
  status        String   
  amount        Float
  customerPhone String
  customerName  String?
  description   String?
  network       String?
  planName      String?
  agentId       String?
  amigoResponse String?  // Stores API response for debugging
  createdAt     DateTime @default(now())
}
